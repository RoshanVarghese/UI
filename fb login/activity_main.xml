<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:text="@string/more"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/facebook_logo"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:src="@drawable/fb_logo_remove_bg_preview"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:id="@+id/linearLayout_id_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_email"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:hint="@string/phone_or_email"
            android:inputType="number"
            android:textSize="30sp"
            tools:ignore="TextFields"
            android:importantForAutofill="no" />


        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/Log_in"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:background="@drawable/button_effect"
        android:text="@string/log_in"
        android:textColor="@color/log_in"
        android:textSize="23sp"
        android:textStyle="normal"
        android:textColorHighlight="@color/login_border"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgot_password"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_id_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/line1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/or"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line1" />

    </LinearLayout>

    <Button
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/create_new_account"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/ripple_create_new_account"
        android:textAlignment="gravity"/>


</LinearLayout>


